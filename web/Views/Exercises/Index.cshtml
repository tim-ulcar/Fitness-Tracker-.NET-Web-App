@model IEnumerable<web.Models.Exercise>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.exerciseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.musclesWorked)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.exerciseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.musclesWorked)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.exerciseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.exerciseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.exerciseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
