@model IEnumerable<web.Models.Nutrition>

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.calories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.protein)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.carbohydrates)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    @if (await UserManager.GetUserAsync(User) == item.userId) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.calories)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.protein)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.carbohydrates)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fat)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.nutritionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.nutritionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.nutritionId">Delete</a>
            </td>
        </tr>
    }  
}
    </tbody>
</table>
